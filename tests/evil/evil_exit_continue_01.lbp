REM ============================================================
REM  EVIL EXIT/CONTINUE 01
REM  - EXIT/CONTINUE WITH NO ENCLOSING LOOP
REM  - WRONG LOOP TYPES
REM ============================================================

REM ##OPTION STRICT_ERR ON

REM --- EXIT/CONTINUE WITH NO LOOP ---

EXIT WHILE
CONTINUE WHILE
EXIT REPEAT
CONTINUE REPEAT
EXIT LOOP
CONTINUE LOOP

REM --- MISMATCHED TYPES ---

REM WHILE but then UNTIL
WHILE A<>0
  PRINT "IN WHILE"
UNTIL A=0      REM SHOULD ERROR: UNTIL FOR NON-REPEAT LOOP

REM REPEAT but then WEND
REPEAT
  PRINT "IN REPEAT"
WEND            REM SHOULD ERROR: WEND FOR NON-WHILE LOOP
