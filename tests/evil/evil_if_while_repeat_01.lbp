REM ============================================================
REM  EVIL IF / WHILE / REPEAT 01
REM  - UNTERMINATED BLOCKS
REM  - EXTRA END IF / WEND / UNTIL
REM  - MULTIPLE ELSE
REM ============================================================

REM ##OPTION STRICT_ERR ON

REM --- UNTERMINATED IF ---

IF A=1 THEN
  PRINT "INSIDE IF"
REM MISSING END IF HERE


REM --- ELSE WITHOUT IF ---

ELSE
PRINT "ORPHAN ELSE"


REM --- END IF WITHOUT IF ---

END IF


REM --- MULTIPLE ELSE FOR SAME IF ---

IF B=1 THEN
  PRINT "B=1"
ELSE
  PRINT "FIRST ELSE"
ELSE
  PRINT "SECOND ELSE (SHOULD ERROR)"
END IF


REM --- WHILE WITHOUT WEND ---

WHILE C<>0
  PRINT "IN WHILE, NEVER CLOSED"


REM --- WEND WITHOUT WHILE ---

WEND


REM --- REPEAT WITHOUT UNTIL ---

REPEAT
  PRINT "REPEAT BODY, NO UNTIL"


REM --- UNTIL WITHOUT REPEAT ---

UNTIL D=0
